<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <header class="page-header">
  <h1>Order #<%= @order.id %></h1>
  <h1>You spent $<%= @order.total_cents / 100 %>.<%= @order.total_cents % 100 %></h1>
</header>

<div class="order-summary jumbotron">
<h4>Thank you for your order <%= @order.email %>!</h4>
</div>

<div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @to_display.each.with_index do |item, index| %>
          <%= render 'item', product: item[:product], name: item[:name], description: item[:description], image: item.image, price: item[:price], quantity: @products[index].quantity, price: @products[index].item_price_cents%>
        <% end %>
      </tbody>

    </table>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

  
</section>
